<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/colmplexViewRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_5dp"
        android:outlineAmbientShadowColor="@color/red_orange"
        android:outlineSpotShadowColor="@color/red_orange"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dim_20dp"
        app:cardElevation="@dimen/dim_5dp"
        tools:targetApi="p">

        <LinearLayout
            android:id="@+id/linearLayoutRequestInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="11dp">

                <ImageView
                    android:id="@+id/iv_service"
                    android:layout_width="@dimen/dim_40dp"
                    android:layout_height="@dimen/dim_40dp"
                    android:layout_centerVertical="true"
                    android:elevation="@dimen/dim_5dp"
                    android:gravity="start|center"
                    android:outlineAmbientShadowColor="@color/red_orange"
                    android:outlineSpotShadowColor="@color/red_orange"
                    android:scaleType="center"
                    android:src="@drawable/ic_fuel" />

                <TextView
                    android:id="@+id/textViewRequestPlanName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dim_10dp"
                    android:layout_marginBottom="@dimen/dim_5dp"
                    android:gravity="start|center"
                    android:textAlignment="viewStart"
                    android:layout_toEndOf="@id/iv_service"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:textColor="@color/baltic_sea"
                    android:textSize="@dimen/dim_14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_55dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="42dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="@string/request_id"
                    android:gravity="start|center"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark_silver"
                    android:textSize="@dimen/dim_12sp" />

                <TextView
                    android:id="@+id/textViewRequestId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="end|center"
                    android:textAlignment="viewEnd"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:textColor="@color/dark_silver"
                    android:textSize="@dimen/dim_12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_55dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="42dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="@string/station"
                    android:gravity="start|center"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark_silver"
                    android:textSize="@dimen/dim_12sp" />

                <TextView
                    android:id="@+id/textViewStationName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="end|center"
                    android:textAlignment="viewEnd"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:textColor="@color/dark_silver"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_55dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="42dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="@string/date_and_time"
                    android:gravity="start|center"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark_silver"
                    android:textSize="@dimen/dim_12sp" />

                <TextView
                    android:id="@+id/textViewDateAndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="end|center"
                    android:textAlignment="viewEnd"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:textColor="@color/dark_silver"
                    android:textSize="@dimen/dim_12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_55dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="42dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="@string/amount"
                    android:gravity="start|center"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark_silver"
                    android:textSize="@dimen/dim_12sp" />

                <TextView
                    android:id="@+id/textViewAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="end|center"
                    android:textAlignment="viewEnd"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:textColor="@color/dark_silver"
                    android:textSize="@dimen/dim_12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_subscription_credit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_55dp"
                android:layout_marginTop="@dimen/dim_8dp"
                android:layout_marginEnd="@dimen/dim_42dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:gravity="start|center"
                    android:text="@string/subscription_credit"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark_silver"
                    android:textSize="@dimen/dim_12sp" />

                <TextView
                    android:id="@+id/tv_subscription_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="end|center"
                    android:textAlignment="viewEnd"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:textColor="@color/dark_silver"
                    android:textSize="@dimen/dim_12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_55dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="42dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="@string/payment_type"
                    android:gravity="start|center"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark_silver"
                    android:textSize="@dimen/dim_12sp" />

                <TextView
                    android:id="@+id/tv_payment_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="end|center"
                    android:textAlignment="viewEnd"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:textColor="@color/dark_silver"
                    android:textSize="@dimen/dim_12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_2dp"
                android:layout_marginHorizontal="39dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/dark_silver_dash_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_55dp"
                android:layout_marginTop="@dimen/dim_6dp"
                android:layout_marginEnd="@dimen/dim_42dp"
                android:layout_marginBottom="@dimen/dim_13dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:text="@string/total"
                    android:gravity="start|center"
                    android:textAlignment="viewStart"
                    android:textColor="@color/silver_chalice"
                    android:textSize="@dimen/dim_16sp" />

                <TextView
                    android:id="@+id/textViewTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="end|center"
                    android:textAlignment="viewEnd"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:textColor="@color/silver_chalice"
                    android:textSize="@dimen/dim_14sp" />

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>