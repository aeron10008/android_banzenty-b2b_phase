<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dim_20dp">

    <View
        android:id="@+id/image_profile"
        android:layout_width="@dimen/dim_120dp"
        android:layout_height="@dimen/dim_120dp"
        android:background="@drawable/profile_image_place_holder"
        android:layout_gravity="center_horizontal"/>

    <View
        android:layout_width="@dimen/dim_120dp"
        android:layout_height="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_12dp"
        android:background="@color/shimmer_grey" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_52dp"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_30dp"
        android:background="@drawable/edt_place_holder_r14_rectangle"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_52dp"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_20dp"
        android:background="@drawable/edt_place_holder_r14_rectangle"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_52dp"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_20dp"
        android:background="@drawable/edt_place_holder_r14_rectangle"/>
</LinearLayout>
