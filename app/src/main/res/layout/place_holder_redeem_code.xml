<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_199dp"
        android:background="@drawable/redeem_image_place_holder"/>

    <View
        android:layout_width="@dimen/dim_120dp"
        android:layout_height="@dimen/dim_8dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_10dp"
        android:background="@color/shimmer_grey"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_181dp"
        android:layout_marginTop="@dimen/dim_17dp"
        android:background="@drawable/redeem_background_place_holder"/>
    
    <View
        android:layout_width="@dimen/dim_200dp"
        android:layout_height="@dimen/dim_8dp"
        android:layout_marginTop="@dimen/dim_24dp"
        android:layout_marginStart="@dimen/dim_25dp"
        android:background="@color/shimmer_grey"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/dim_10dp"
        android:layout_marginHorizontal="@dimen/dim_25dp"
        android:background="@color/shimmer_grey" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/dim_4dp"
        android:layout_marginHorizontal="@dimen/dim_25dp"
        android:background="@color/shimmer_grey" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/dim_4dp"
        android:layout_marginHorizontal="@dimen/dim_25dp"
        android:background="@color/shimmer_grey" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/dim_4dp"
        android:layout_marginHorizontal="@dimen/dim_25dp"
        android:background="@color/shimmer_grey" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/dim_4dp"
        android:layout_marginHorizontal="@dimen/dim_25dp"
        android:background="@color/shimmer_grey" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/dim_4dp"
        android:layout_marginHorizontal="@dimen/dim_25dp"
        android:background="@color/shimmer_grey" />
</LinearLayout>