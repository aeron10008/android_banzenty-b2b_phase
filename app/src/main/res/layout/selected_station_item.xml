<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dim_5dp"
    android:layout_marginVertical="@dimen/dim_2dp"
    android:background="@drawable/custom_item_red_orange_r15"
    android:paddingHorizontal="@dimen/dim_8dp"
    android:paddingVertical="@dimen/dim_5dp">

    <TextView
        android:id="@+id/tv_selectedStationName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dim_5dp"
        android:fontFamily="@font/sf_pro_display_medium"
        android:lines="2"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:textSize="@dimen/dim_12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_delete"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:padding="@dimen/dim_5dp"
        android:src="@drawable/remove_white_ic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>