<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dim_20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/image_factory"
            android:layout_width="@dimen/dim_40dp"
            android:layout_height="@dimen/dim_40dp"
            android:background="@color/shimmer_grey"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dim_20dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_gravity="start"
                android:background="@color/shimmer_grey" />

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/dim_10dp"
                android:background="@color/shimmer_grey" />

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/dim_10dp"
                android:background="@color/shimmer_grey" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_150dp"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/dim_50dp"
        android:background="@drawable/rounded_shimmer_20dp" />


    <View
        android:layout_width="@dimen/dim_120dp"
        android:layout_height="8dp"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/dim_20dp"
        android:background="@color/shimmer_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dim_120dp"
            android:layout_height="@dimen/dim_120dp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dim_20dp"
            android:background="@drawable/rounded_shimmer_20dp" />

        <View
            android:layout_width="@dimen/dim_120dp"
            android:layout_height="@dimen/dim_120dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dim_20dp"
            android:background="@drawable/rounded_shimmer_20dp" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dim_120dp"
        android:layout_height="@dimen/dim_120dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dim_10dp"
        android:background="@drawable/rounded_shimmer_20dp" />


    <View
        android:layout_width="@dimen/dim_120dp"
        android:layout_height="8dp"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/dim_20dp"
        android:background="@color/shimmer_grey" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_120dp"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/dim_15dp"
        android:background="@drawable/rounded_shimmer_20dp" />
</LinearLayout>
