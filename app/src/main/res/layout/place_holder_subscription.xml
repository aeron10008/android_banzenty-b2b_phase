<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/dim_20dp"
    app:cardCornerRadius="@dimen/dim_20dp"
    android:layout_marginVertical="@dimen/dim_7dp"
    android:background="@color/transparent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="@dimen/dim_100dp"
            android:layout_height="@dimen/dim_18dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dim_14dp"
            android:layout_marginStart="@dimen/dim_21dp"
            android:background="@color/shimmer_grey"/>

        <View
            android:layout_width="@dimen/dim_120dp"
            android:layout_height="@dimen/dim_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15dp"
            android:background="@color/shimmer_grey"/>

        <View
            android:layout_width="@dimen/dim_20dp"
            android:layout_height="11dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dim_23dp"
            android:layout_marginEnd="138dp"
            android:background="@color/shimmer_grey"/>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <View
            android:layout_width="@dimen/dim_120dp"
            android:layout_height="@dimen/dim_15dp"
            android:layout_marginTop="@dimen/dim_15dp"
            android:layout_marginStart="@dimen/dim_25dp"
            android:background="@color/shimmer_grey"/>

        <View
            android:layout_width="@dimen/dim_120dp"
            android:layout_height="@dimen/dim_15dp"
            android:layout_marginTop="@dimen/dim_5dp"
            android:layout_marginStart="@dimen/dim_25dp"
            android:background="@color/shimmer_grey"/>

        <View
            android:layout_width="@dimen/dim_120dp"
            android:layout_height="@dimen/dim_15dp"
            android:layout_marginTop="@dimen/dim_5dp"
            android:layout_marginStart="@dimen/dim_25dp"
            android:background="@color/shimmer_grey"/>

        <View
            android:layout_width="@dimen/dim_120dp"
            android:layout_height="@dimen/dim_15dp"
            android:layout_marginTop="@dimen/dim_9dp"
            android:layout_marginStart="@dimen/dim_25dp"
            android:background="@color/shimmer_grey"/>
    </LinearLayout>

        <View
            android:layout_width="@dimen/dim_104dp"
            android:layout_height="@dimen/dim_31dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shimmer_subscribe_btn"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>