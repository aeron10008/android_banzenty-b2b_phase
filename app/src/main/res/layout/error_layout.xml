<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-60dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_15dp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_14sp" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_5dp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:gravity="center"
        android:textColor="@color/martinique"
        android:textSize="@dimen/dim_14sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_20dp"
        android:background="@drawable/custom_button_red_orange_r10"
        android:fontFamily="@font/sf_pro_display_bold"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dim_50dp"
        android:text="@string/text_retry"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/dim_12sp"
        android:visibility="gone" />
</LinearLayout>