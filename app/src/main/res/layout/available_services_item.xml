<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:background="@drawable/custom_item_border_r14"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewServiceIcon"
        android:layout_width="@dimen/dim_50dp"
        android:layout_height="@dimen/dim_50dp"
        android:layout_marginStart="@dimen/dim_8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/mac_logo"
        android:gravity="start|center" />

    <TextView
        android:id="@+id/textViewServiceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dim_8dp"
        android:gravity="start|center"
        android:textAlignment="viewStart"
        android:fontFamily="@font/sf_pro_display_regular"
        android:textColor="@color/martinique"
        android:textSize="@dimen/dim_16sp" />
</LinearLayout>