<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="@dimen/dim_100dp"
        android:layout_height="@dimen/dim_10dp"
        android:layout_marginStart="@dimen/dim_25dp"
        android:layout_marginTop="@dimen/dim_30dp"
        android:background="@color/shimmer_grey" />

    <View
        android:layout_width="@dimen/dim_240dp"
        android:layout_height="@dimen/dim_37dp"
        android:layout_marginStart="@dimen/dim_25dp"
        android:layout_marginTop="@dimen/dim_9dp"
        android:background="@drawable/custom_iron_r14_rectangle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dim_100dp"
            android:layout_height="@dimen/dim_10dp"
            android:layout_marginStart="@dimen/dim_25dp"
            android:layout_marginTop="@dimen/dim_35dp"
            android:background="@color/shimmer_grey" />

        <View
            android:layout_width="@dimen/dim_100dp"
            android:layout_height="@dimen/dim_10dp"
            android:layout_marginStart="@dimen/dim_25dp"
            android:layout_marginTop="@dimen/dim_35dp"
            android:background="@color/shimmer_grey" />

        <View
            android:layout_width="@dimen/dim_100dp"
            android:layout_height="@dimen/dim_10dp"
            android:layout_marginStart="@dimen/dim_25dp"
            android:layout_marginTop="@dimen/dim_35dp"
            android:background="@color/shimmer_grey" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_20dp"
        android:layout_marginHorizontal="@dimen/dim_25dp"
        android:layout_marginTop="@dimen/dim_50dp"
        android:background="@color/shimmer_grey" />
</LinearLayout>